<Page navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <Label text="Browse"></Label>
    </ActionBar>

    <GridLayout class="landing" rows="auto, auto" height="50%">
        <Button row="0" text="New game" class="start-button -lg" tap="onNewGameTap"></Button>
        <Button row="1" text="Resume previous game" class="start-button -lg" tap="onResumeGameTap"></Button>
    </GridLayout>
</Page>